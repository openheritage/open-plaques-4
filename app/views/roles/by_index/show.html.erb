<% content_for(:page_title) {t '.page_title', letter: @index.upcase } %>
<% content_for(:title) {t '.page_heading', letter: @index.upcase } %>
<% content_for(:admin_menu) {navbar_link_to t('buttons.add'), new_role_path} %>

<!-- Page Title -->
<div class="page-title">
  <div class="container d-lg-flex justify-content-between align-items-center">
    <h1 class="mb-2 mb-lg-0"><%= t t '.page_heading', letter: @index.upcase %></h1>
    <nav class="breadcrumbs">
      <ol>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Roles", roles_path %></li>
        <li class="current"><%= @index.upcase %></li>
      </ol>
    </nav>
  </div>
</div><!-- End Page Title -->

<section id="roles-index" class="roles-index section">

  <div class="container" data-aos="fade-up" data-aos-delay="100">

    <ul class="nav">
      <% for letter in 'A'..'Z' %>
        <li class="nav-link"><%= navigation_link_to(letter, roles_by_index_path(letter.downcase)) %></li>
      <% end %>
    </ul>

    <%= render partial: 'roles/tiles' %>

  </div>

</section>
