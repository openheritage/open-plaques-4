<% content_for(:page_title) { t(".page_title") } %>

<!-- Page Title -->
<div class="page-title">
  <div class="container d-lg-flex justify-content-between align-items-center">
    <h1 class="mb-2 mb-lg-0"><%= t(".page_heading") %></h1>
    <nav class="breadcrumbs">
      <ol>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Roles", roles_path %></li>
        <li class="current">New</li>
      </ol>
    </nav>
  </div>
</div><!-- End Page Title -->

<section class="section">
  <div class="container" data-aos="fade-up" data-aos-delay="100">

    <div class="row">
      <div class="col-lg-5">
        <%= form_for(@role) do |f| %>
          <div class="mb-3">
            <%= f.label :name %>
            <%= f.text_field :name %>
          </div>
          <div class="mb-3">
            <%= f.label :abbreviation %>
            <%= f.text_field :abbreviation %>
          </div>
          <div class="mb-3">
            <%= f.label :prefix %>
            <%= f.text_field :prefix %>
          </div>
          <div class="mb-3">
            <%= f.label :suffix %>
            <%= f.text_field :suffix %>
          </div>
          <div class="mb-3">
            <%= f.label :role_type %>
            <%= f.collection_select(:role_type, Role.types, :to_s, :to_s, { include_blank: true }, { class: 'form-select' }) %>
          </div>
          <%= f.submit t("buttons.save") %>
        <% end %>
    </div>

  </div>
</section>
