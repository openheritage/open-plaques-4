<div class="card vcard">
  <div class="card-block">
    <h4 class="card-title">
      <%= fa_icon(:user) if role.person?%>
      <%= fa_icon(:paw) if role.animal? %>
      <%= fa_icon(:users) if role.group? %>
      <%= fa_icon(:building) if role.place? %>
      <%= fa_icon(:'map-marker') if role.thing? %>
      <%= link_to role.name, role %>
    </h4>
  </div>
  <div class="card-block">
    <% if role.used_as_a_suffix? %>
      <p class="card-text">
        <%= role.military_medal? ? 'A military medal that confers' : 'Confers' %>
        <strong><%= role.letters %></strong> priority <%= role.priority %>
      </p>
    <% end %>
    <ul class="list-group">
      <% role.people.first(3).each do |person|%>
        <li class="list-group-item"><%= link_to person.full_name, person %></li>
      <% end %>
    </ul>
  </div>
</div>
