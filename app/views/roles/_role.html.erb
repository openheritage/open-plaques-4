<div class="col-sm-3 col-lg-2 mb-2">
  <div class="card vcard">
    <div class="card-block">
      <h6 class="card-title">
        <%= fa_icon(:user) if role.person?%>
        <%= fa_icon(:paw) if role.animal? %>
        <%= fa_icon(:users) if role.group? %>
        <%= fa_icon(:building) if role.place? %>
        <%= fa_icon(:'map-marker') if role.thing? %>
        <% if controller.controller_name.eql?('roles') && controller.action_name.eql?('show') %>
          <%= role.name.pluralize %>
        <% else %>
          <%= link_to role.name, role %>
        <% end %>
        <% @subject_count = role.personal_roles_count %>
        <%= render partial: 'people/badge' %>
      </h6>
    </div>
  </div>
</div>
