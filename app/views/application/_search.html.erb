<!-- Search Widget -->
<div class="search-widget widget-item">

  <h3 class="widget-title">Search</h3>
  <%= form_tag(search_path, method: :get, class: 'd-flex') do %>
    <%= text_field_tag(:phrase, params[:phrase], type: 'search', placeholder: t('menu.search_placeholder'), 'aria-label' => 'Search', class: 'form-control me-2') %>
    <%= submit_tag(t('menu.go'), class: '', name: :gosearch) %>
  <% end %>

</div><!--/Search Widget -->
