<% content_for(:page_title) {t '.page_title', country: @country.name} %>
<% content_for(:admin_menu) {navbar_link_to(t('.add_an_area'), new_country_area_path(@country.alpha2), {class: :edit, title: t('buttons.add')})} %>

<!-- Page Title -->
<div class="page-title">
  <div class="container d-lg-flex justify-content-between align-items-center">
    <h1 class="mb-2 mb-lg-0"><%= t '.page_title', country: @country.name %></h1>
    <nav class="breadcrumbs">
      <ol>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Places", countries_path %></li>
        <li><%= link_to @country.name, @country %></li>
        <li class="current">Edit</li>
      </ol>
    </nav>
  </div>
</div><!-- End Page Title -->

<section class="section">
  <div class="container" data-aos="fade-up" data-aos-delay="100">

    <%= render "form" %>

  </div>
</section>
