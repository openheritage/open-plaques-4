<% content_for(:page_title) { t(".page_title", letter: @index.upcase) } %>
<% content_for(:admin_menu) { navbar_link_to t("buttons.add"), new_person_path } %>

<!-- Page Title -->
<div class="page-title">
  <div class="container d-lg-flex justify-content-between align-items-center">
    <h1 class="mb-2 mb-lg-0"><%= t(".page_heading", letter: @index.upcase) %></h1>
    <nav class="breadcrumbs">
      <ol>
        <li><%= link_to "Home", root_path %></li>
        <li class="current">People</li>
      </ol>
    </nav>
  </div>
</div><!-- End Page Title -->

<section class="section">
  <div class="container" data-aos="fade-up" data-aos-delay="100">

    <ul class="nav" id="alphabetical-navbar">
      <% for letter in "A".."Z" %>
        <%= content_tag("li", navigation_link_to(letter, people_by_index_path(letter.downcase)), class: "nav-link") %>
      <% end %>
    </ul>
    <%= render partial: "people/tiles" %>

  </div>
</section>
