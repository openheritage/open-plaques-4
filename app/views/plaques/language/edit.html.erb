<% content_for :page_title, "Edit language of plaque \#" + @plaque.id.to_s %>
<%= render "plaques/edit_bar", plaque: @plaque %>

<!-- Page Title -->
<div class="page-title">
  <div class="container d-lg-flex justify-content-between align-items-center">
    <h1 class="mb-2 mb-lg-0"><%= t(".page_heading") %></h1>
    <nav class="breadcrumbs">
      <ol>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Plaques", plaques_path %></li>
        <li><%= link_to @plaque %></li>
        <li class="current">Edit language</li>
      </ol>
    </nav>
  </div>
</div><!-- End Page Title -->

<section class="section">
  <div class="container" data-aos="fade-up" data-aos-delay="100">

    <p>Which language is the <%= link_to @plaque.title, @plaque %> written in?</p>
    <%= form_for @plaque do |f| %>
      <div class="form-group">
        <%= f.label :language_id, t(".language_label") %>
        <%= f.collection_select :language_id, @languages, :id, :name, { class: "form-control" } %>
      </div>
      <%= f.submit t("buttons.save") %>
    <% end %>

  </div>
</section>
