<% content_for :page_title, t(".page_title") + @plaque.id.to_s %>
<%= render "plaques/edit_bar", plaque: @plaque %>

<!-- Page Title -->
<div class="page-title">
  <div class="container d-lg-flex justify-content-between align-items-center">
    <h1 class="mb-2 mb-lg-0"><%= t(".title") %></h1>
    <nav class="breadcrumbs">
      <ol>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Plaques", plaques_path %></li>
        <li><%= link_to @plaque %></li>
        <li class="current">Edit inscription</li>
      </ol>
    </nav>
  </div>
</div><!-- End Page Title -->

<section class="section">
  <div class="container" data-aos="fade-up" data-aos-delay="100">

    <div class="row">
      <div class="col-xs-12 <%= "col-sm-6" if @plaque.main_photo %>">
        <p><%= t(".page_subhead") %></p>
        <%= form_for @plaque, html: { class: "row g-3 mb-9" } do |f| %>
          <div class="row">
            <%= f.label :language_id, t(".language"), class: "col-auto" %>
            <div class="col-sm">
              <%= f.collection_select :language_id, @languages, :id, :name %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :inscription, t('.the_words') %>
            <%= f.text_area :inscription, {autocomplete: 'off', rows: 6, placeholder: t('.placeholder'), autofocus: true} %>
          </div>
          <div class="form-check">
            <label class="form-check-label">
              <%= f.check_box :inscription_is_stub, class: 'form-check-input' %>
              <%= t('.exact_wording') %>
            </label>
          </div>
          <div class="form-group">
            <%= f.label :inscription_in_english, t('.inscription_in_english') %>
            <%= f.text_area :inscription_in_english, {class: "form-control", rows: 6} %>
          </div>
          <%= f.submit t("buttons.save") %>
        <% end %>
      </div>
      <% if @plaque.main_photo %>
        <div class="col-xs-12 col-sm-6">
          <%= render @plaque.main_photo, large: true %>
        </div>
      <% end %>
    </div>

  </div>
</section>
