<% content_for(:page_title) { t(".page_title", verb: @verb.name) } %>
<% content_for(:admin_menu) { navbar_link_to t("buttons.add"), new_verb_path } %>

<!-- Page Title -->
<div class="page-title">
  <div class="container d-lg-flex justify-content-between align-items-center">
    <h1 class="mb-2 mb-lg-0"><%= t(".page_heading", verb: @verb.name) %></h1>
    <nav class="breadcrumbs">
      <ol>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Verbs", verbs_path %></li>
        <li class="current"><%= @verb.name %></li>
      </ol>
    </nav>
  </div>
</div><!-- End Page Title -->

<section class="section">
  <div class="container" data-aos="fade-up" data-aos-delay="100">

    <p>
      Each subject is connected to a plaque by what they did there
      <% @subject_count = @verb.personal_connections_count %>
      <%= render partial: 'people/badge' %>
    </p>

    <%= will_paginate @personal_connections if @personal_connections.respond_to?(:total_pages) %>
    <div class="row" data-masonry='{"percentPosition": true }'>
      <%= render @personal_connections %>
    </div>
    <%= will_paginate @personal_connections if @personal_connections.respond_to?(:total_pages) %>

  </div>
</section>
