<% content_for :page_title, "To do: photos with no plaque" %>
<% content_for(:admin_menu) { navbar_link_to("All to-do lists", "/todo") } %>

<!-- Page Title -->
<div class="page-title">
  <div class="container d-lg-flex justify-content-between align-items-center">
    <h1 class="mb-2 mb-lg-0">
      <%= t(".page_heading", limit: @limit) %>
    </h1>
    <nav class="breadcrumbs">
      <ol>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Todo", todo_index_path %></li>
        <li class="current">Unassigned photo</li>
      </ol>
    </nav>
  </div>
</div><!-- End Page Title -->

<section class="section">
  <div class="container" data-aos="fade-up" data-aos-delay="100">

    <% if @photos.size > 0 %>
      <%= will_paginate @photos %>
      <div class="row" data-masonry='{"percentPosition": true }'>
        <% @photos.each do |photo| %>
          <div class="col-sm-3 col-lg-2 mb-2">
          <%= link_to edit_photo_path(photo) do %>
            <%= render photo %>
          <% end %>
          </div>
        <% end %>
      </div>
      <%= will_paginate @photos %>
    <% else %>
      <p>Every photo is connected to a plaque. Bravo!</p>
    <% end %>

  </div>
</section>
