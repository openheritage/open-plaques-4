<% content_for :page_title, "Add a list to be datacaptured" %>
<% content_for(:admin_menu) { navbar_link_to("All to-do lists", "/todo") } %>

<% content_for :title, "Add a list to be datacaptured" %>

<!-- Page Title -->
<div class="page-title">
  <div class="container d-lg-flex justify-content-between align-items-center">
    <h1 class="mb-2 mb-lg-0"><%= t(".page_heading") %></h1>
    <nav class="breadcrumbs">
      <ol>
        <li><%= link_to "Home", root_path %></li>
        <li class="current">Todos</li>
      </ol>
    </nav>
  </div>
</div><!-- End Page Title -->

<section class="section">
  <div class="container" data-aos="fade-up" data-aos-delay="100">

    <%= form_for :todo, url: url_for(controller: "todo", action: :create) do |f| -%>
      <%= f.label :action %>
      <%= f.text_field :action %>
      <%= f.label :description %>
      <%= f.text_field :description %>
      <%= f.label :url %>
      <%= f.text_field :url %>
      <%= f.submit t("buttons.add") %>
    <% end %>

  </div>
</section>
