<% content_for :page_title, "To do: UK plaques with no connections" %>
<% content_for(:admin_menu) { navbar_link_to("All to-do lists", "/todo") } %>

<!-- Page Title -->
<div class="page-title">
  <div class="container d-lg-flex justify-content-between align-items-center">
    <h1 class="mb-2 mb-lg-0">
      <%= t(".page_heading", percentage: @no_connection_percentage) %>
    </h1>
    <nav class="breadcrumbs">
      <ol>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Todo", todo_index_path %></li>
        <li class="current">No connection</li>
      </ol>
    </nav>
  </div>
</div><!-- End Page Title -->

<section class="section">
  <div class="container" data-aos="fade-up" data-aos-delay="100">

    <p><% "#{@no_connection_count} out of #{@uk_plaques_count} == #{@no_connection_percentage}%" %></p>

    <% if @plaques.size > 0 %>
      <%= render partial: "plaques/tiles" %>
    <% else %>
      <p><%= t(".success") %></p>
    <% end %>

  </div>
</section>
