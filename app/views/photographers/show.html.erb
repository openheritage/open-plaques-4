<% content_for(:page_title) {t '.page_title', photographer: @photographer.id} %>
<% content_for(:title) {t '.page_heading', photographer:  @photographer.id} %>
<% content_for(:page_subhead) {pluralize_with_no(@photographer.photos.size,'photo')} %>

<div class="row" data-masonry='{"percentPosition": true }'>
  <% @photographer.photos.each do |photo| %>
    <div class="col-2">
      <%= link_to photo do %>
        <%= render photo %>
      <% end %>
    </div>
  <% end %>
</div>
