<% content_for(:page_title) { t(".page_title", area: "#{@area.name}, #{@area.country.name}") } %>

<!-- Page Title -->
<div class="page-title">
  <div class="container d-lg-flex justify-content-between align-items-center">
    <h1 class="mb-2 mb-lg-0"><%= t(".page_title", area: "#{@area.name}, #{@area.country.name}") %></h1>
    <nav class="breadcrumbs">
      <ol>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Places", countries_path %></li>
        <li><%= link_to @country %></li>
        <li><%= link_to @area.name, @area %></li>
        <li class="current">Edit</li>
      </ol>
    </nav>
  </div>
</div><!-- End Page Title -->

<section class="section">
  <div class="container" data-aos="fade-up" data-aos-delay="100">

    <%= form_for @area, url: { action: "update" }, class: "mb-3" do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <div class="form-group">
        <%= f.label :slug %>
        <%= f.text_field :slug %>
        <small class="text-muted"><%= t("must_be_underscored") %></small>
      </div>
      <%= f.label :country_id %>
      <%= f.collection_select :country_id, @countries, :id, :name, {} %>
      <%= render 'geolocate', { f: f, object: @area, q: "#{@area.name}, #{@area.country.name}" } %>
      <%= f.submit t("buttons.update") %>
    <% end %>
    <% if @area.plaques.geolocated.size > 0 %>
      <div class="mb-3">
      <%= button_to "geolocate from plaques", controller: :areas, action: :geolocate, id: @area %>
      </div>
    <% end %>
    <%= button_delete(country_area_path(@area.country, @area)) %>

  </div>
</section>
