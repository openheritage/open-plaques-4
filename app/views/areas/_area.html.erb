<div class="col-sm-3 col-lg-2 mb-2 aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">
  <div class="float-end">
    <span class="badge bg-secondary pull-right">
      <%= pluralize_with_no(area.plaques_count, t('activerecord.models.plaque').downcase) %>
    </span>
    <%= fa_icon(:compass) if area.geolocated? %>
  </div>
  <% if area.country %>
    <span class="flag-icon flag-icon-<%= area.country.alpha2 %>"></span>
  <% end %>
  <%= link_to area.name, area_plaques_path(area) %>
</div>
