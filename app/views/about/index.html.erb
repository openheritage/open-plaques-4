<% content_for(:page_title) {t '.page_title'} %>

<!-- Page Title -->
<div class="page-title">
  <div class="container d-lg-flex justify-content-between align-items-center">
    <h1 class="mb-2 mb-lg-0">About</h1>
    <nav class="breadcrumbs">
      <ol>
        <li><a href="index.html">Home</a></li>
        <li class="current">About</li>
      </ol>
    </nav>
  </div>
</div><!-- End Page Title -->

<!-- About Section -->
<section id="about" class="about section">

  <div class="container">

    <div class="row gy-4">

      <div class="col-lg-6 content" data-aos="fade-up" data-aos-delay="100">
        <p class="who-we-are">Who We Are</p>
        <h3>Open Plaques. The Museum of the Street est. 2009</h3>
        <p class="fst-italic">
          <%= t('.featurette_1_body') %>
        </p>
        <ul>
          <li><i class="bi bi-check-circle"></i> <span>Ullamco laboris nisi ut aliquip ex ea commodo consequat.</span></li>
          <li><i class="bi bi-check-circle"></i> <span>Duis aute irure dolor in reprehenderit in voluptate velit.</span></li>
          <li><i class="bi bi-check-circle"></i> <span>Ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate trideta storacalaperda mastiro dolore eu fugiat nulla pariatur.</span></li>
        </ul>
      </div>

      <div class="col-lg-6 about-images" data-aos="fade-up" data-aos-delay="200">
        <div class="row gy-4">
          <div class="col-lg-6">
            <%= image_tag "about-company-1.jpg", class: "img-fluid", alt: "" %>
          </div>
          <div class="col-lg-6">
            <div class="row gy-4">
              <div class="col-lg-12">
                <%= image_tag "about-company-2.jpg", class: "img-fluid", alt: "" %>
              </div>
              <div class="col-lg-12">
                <%= image_tag "about-company-3.jpg", class: "img-fluid", alt: "" %>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>

  </div>
</section><!-- /About Section -->

<!-- Team Section -->
<section id="team" class="team section">

  <!-- Section Title -->
  <div class="container section-title" data-aos="fade-up">
    <div class="section-title-container d-flex align-items-center justify-content-between">
      <h2>Team</h2>
      <p>A plucky band of volunteers have made this happen</p>
    </div>
  </div><!-- End Section Title -->

  <div class="container">

    <div class="row gy-4">

      <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
        <% team_member = TeamMember.new(id: 1, name: 'Jez Nicholson', title: 'Creator') %>
        <%= render("about/team_member", team_member:) %>
      </div><!-- End Team Member -->

      <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
        <% team_member = TeamMember.new(id: 2, name: 'Deidre Moran', title: 'Socials') %>
        <%= render("about/team_member", team_member:) %>
      </div><!-- End Team Member -->

    </div>

  </div>

</section><!-- /Team Section -->

<div class="row">
  <div class="container marketing">
    <%= render partial: '/layouts/featurette', locals: { id: 1, image_url: 'minnie-turner-unveiling.jpg', image_alt: 'Unveiling Minnie Turner plaque in Brighton', heading: t('.featurette_1_heading'), subheading: t('.featurette_1_subheading'), body: t('.featurette_1_body') } %>
    <%= render partial: '/layouts/featurette', locals: { id: 2, image_url: 'minjoo-jalali-plaque.jpg', image_alt: 'Minjoo Jalali plaque', heading: t('.featurette_2_heading'), subheading: t('.featurette_2_subheading'), body: t('.featurette_2_body') } %>
    <%= render partial: '/layouts/featurette', locals: { id: 3, image_url: 'blue-plaque-dress.jpg', image_alt: 'A dress of blue plaques', heading: t('.featurette_3_heading'), subheading: t('.featurette_3_subheading'), body: t('.featurette_3_body') } %>
    <%= render partial: '/layouts/featurette', locals: { id: 4, image_url: 'hackday-shirts.jpg', image_alt: 'A collection of hackday shorts', heading: t('.featurette_4_heading'), subheading: t('.featurette_4_subheading'), body: t('.featurette_4_body') } %>
  </div>
</div>
