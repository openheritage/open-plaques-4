<% content_for(:page_title) { t(".page_title") } %>

<!-- Page Title -->
<div class="page-title">
  <div class="container d-lg-flex justify-content-between align-items-center">
    <h1 class="mb-2 mb-lg-0"><%= t(".page_heading") %></h1>
    <nav class="breadcrumbs">
      <ol>
        <li><%= link_to "Home", root_path %></li>
        <li>Colours</li>
        <li class="current">New</li>
      </ol>
    </nav>
  </div>
</div><!-- End Page Title -->

<section class="section">
  <div class="container" data-aos="fade-up" data-aos-delay="100">
    <div class="row">
      <div class="col-lg-8">

        <%= form_for @colour, html: { class: "row g-3 mb-9" } do |f| %>
          <div class="col-sm-6 col-md-8">
            <div class="form-floating">
              <%= f.text_field :name %>
              <%= f.label :name %>
            </div>
          </div>
          <div class="col-sm-6 col-md-8">
            <div class="form-floating">
              <%= f.text_field :dbpedia_uri %>
              <%= f.label :dbpedia_uri %>
            </div>
          </div>
          <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex">
              <%= f.submit t("buttons.save") %>
            </div>
          </div>
        <% end %>

      </div>
      <div class="col-lg-4 sidebar">
        <div class="widgets-container">
          
          <div class="colour-widget widget-item">
            <h3 class="widget-title">Existing colours</h3>
            <ul class="list-group">
              <% Colour.all.alphabetically.each do |colour| %>
                <li class="list-group-item"><%= colour.name %></li>
              <% end %>
            </ul>
          </div>

        </div>
      </div>
    </div>
  </div>
</section>
