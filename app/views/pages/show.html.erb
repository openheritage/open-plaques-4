<!-- Page Title -->
<div class="page-title">
  <div class="container d-lg-flex justify-content-between align-items-center">
    <h1 class="mb-2 mb-lg-0"><%= @page.name %></h1>
    <nav class="breadcrumbs">
      <ol>
        <li><a href="index.html">Home</a></li>
        <li class="current"><%= @page.name %></li>
      </ol>
    </nav>
  </div>
</div><!-- End Page Title -->

<div class="container">
  <div class="row">

    <div class="col-lg-8">

      <!-- Blog Details Section -->
      <section id="blog-details" class="blog-details section">
        <div class="container">

          <article class="article">

            <div class="post-img">
              <%= image_tag "blog/blog-#{rand(6) + 1}.jpg", alt: "", class: "img-fluid" %>
            </div>

            <h2 class="title"><%= @page.strapline %></h2>

            <div class="meta-top">
              <ul>
                <li class="d-flex align-items-center"><i class="bi bi-person"></i> <%= @page.author&.name %></li>
                <li class="d-flex align-items-center"><i class="bi bi-clock"></i> <time datetime="<%= @page.created_at.strftime('%Y-%m-%d') %>"><%= @page.created_at.strftime('%-d %b %Y') %></time></li>
              </ul>
            </div><!-- End meta top -->

            <div class="content">
              <%= markdown(@page.body) %>

            </div><!-- End post content -->

            <div class="meta-bottom">
              <i class="bi bi-folder"></i>
              <ul class="cats">
                <li><a href="#">Business</a></li>
              </ul>

              <i class="bi bi-tags"></i>
              <ul class="tags">
                <li><a href="#">Creative</a></li>
                <li><a href="#">Tips</a></li>
                <li><a href="#">Marketing</a></li>
              </ul>
            </div><!-- End meta bottom -->

          </article>

        </div>
      </section><!-- /Blog Details Section -->

    </div>

    <div class="col-lg-4 sidebar">

      <div class="widgets-container">

        <!-- Blog Author Widget -->
        <div class="blog-author-widget widget-item">

          <div class="d-flex flex-column align-items-center">
            <div class="d-flex align-items-center w-100">
              <%= image_tag "blog/blog-author.jpg", alt: "", class: "rounded-circle flex-shrink-0" %>
              <div>
                <h4><%= @page.author&.name %></h4>
                <div class="social-links">
                  <% if @page.author&.bluesky %>
                    <a href="https://bluesky.com/<%= @page.author&.bluesky %>" target="_new"><i class="bi bi-bluesky"></i></a>
                  <% end %>
                  <% if @page.author&.mastodon %>
                    <a href="https://mastodon.com/<%= @page.author&.mastodon %>" target="_new"><i class="bi bi-mastodon"></i></a>
                  <% end %>
                  <% if @page.author&.twitter %>
                    <a href="https://x.com/<%= @page.author&.twitter %>" target="_new"><i class="bi bi-twitter-x"></i></a>
                  <% end %>
                  <% if @page.author&.facebook %>
                    <a href="https://facebook.com/<%= @page.author&.facebook %>" target="_new"><i class="bi bi-facebook"></i></a>
                  <% end %>
                  <% if @page.author&.instagram %>
                    <a href="https://instagram.com/<%= @page.author&.instagram %>" target="_new"><i class="biu bi-instagram"></i></a>
                  <% end %>
                  <% if @page.author&.linkedin %>
                    <a href="https://linkedin.com/<%= @page.author&.linkedin %>" target="_new"><i class="biu bi-linkedin"></i></a>
                  <% end %>
                </div>
              </div>
            </div>

            <p>
              <%= @page.author&.biography %>
            </p>

          </div>

        </div><!--/Blog Author Widget -->

        <!-- Search Widget -->
        <div class="search-widget widget-item">

          <h3 class="widget-title">Search</h3>
          <form action="">
            <input type="text">
            <button type="submit" title="Search"><i class="bi bi-search"></i></button>
          </form>

        </div><!--/Search Widget -->

        <!-- Recent Posts Widget -->
        <div class="recent-posts-widget widget-item">

          <h3 class="widget-title">Recent Posts</h3>

          <% Page.random(5).each do |page| %>
            <div class="post-item">
              <%= image_tag "blog/blog-recent-#{rand(5) + 1}.jpg", alt: "", class: "flex-shrink-0" %>
              <div>
                <h4><%= link_to page.name, page %></h4>
                <time datetime="<%= page.created_at.strftime('%Y-%m-%d') %>"><%= page.created_at.strftime('%-d %b %Y') %></time>
              </div>
            </div><!-- End recent post item-->
          <% end %>

        </div><!--/Recent Posts Widget -->

        <!-- Tags Widget -->
        <div class="tags-widget widget-item">

          <h3 class="widget-title">Tag</h3>
          <ul>
            <% ActsAsTaggableOn::Tag.most_used(10).each do |tag| %>
              <li><a href="#"><%= tag.name %></a></li>
            <% end %>
          </ul>

        </div><!--/Tags Widget -->

      </div>

    </div>

  </div>
</div>
