<% content_for(:page_title) { t(".page_title", page: @page.name) } %>
<% content_for(:admin_menu) { navbar_link_to(t("buttons.add"), new_page_path) } %>

<!-- Page Title -->
<div class="page-title">
  <div class="container d-lg-flex justify-content-between align-items-center">
    <h1 class="mb-2 mb-lg-0"><%= t(".page_heading", page: @page.name) %></h1>
    <nav class="breadcrumbs">
      <ol>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Pages", pages_path %></li>
        <li class="current"><%= @page.slug %></li>
      </ol>
    </nav>
  </div>
</div><!-- End Page Title -->

<section class="section">
  <div class="container" data-aos="fade-up" data-aos-delay="100">

    <%= form_for @page, url: "/pages/" + @page.slug do |f| %>
      <div class="mb-3">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div class="mb-3">
        <%= f.label :slug %>
        <%= f.text_field :slug %>
      </div>
      <div class="mb-3">
        <%= f.label :strapline %>
        <%= f.text_field :strapline %>
      </div>
      <div class="mb-3">
        <%= f.label :abstract %>
        <%= f.text_area :abstract, {rows: '20', cols: '100'} %>
      </div>
      <div class="mb-3">
        <%= f.label :body %>
        <%= f.text_area :body, {rows: '40', cols: '100'} %>
      </div>
      <div class="mb-3">
        <%= f.label :category_list %>
        <%= f.text_field :category_list %>
      </div>
      <div class="mb-3">
        <%= f.label :tag_list %>
        <%= f.text_field :tag_list %>
      </div>
      <%= f.submit t("buttons.save") %>
    <% end %>

  </div>
</section>