<div class="team-member d-flex align-items-start">
  <div class="pic"><%= image_tag team_member.photo_uri || "team/team-4.jpg", class: "img-fluid", alt:"photo of #{team_member.name}" %></div>
  <div class="member-info">
    <h4><%= team_member.name.present? ? team_member.name : team_member.username %></h4>
    <span><%= team_member.title %></span>
    <p><%= team_member.biography %></p>
    <div class="social">
      <% if team_member.twitter.present? %>
        <a href=""><i class="bi bi-twitter-x"></i></a>
      <% end %>
      <% if team_member.mastodon.present? %>
        <a href=""><i class="bi bi-mastodon"></i></a>
      <% end %>
      <% if team_member.instagram.present? %>
        <a href=""><i class="bi bi-instagram"></i></a>
      <% end %>
      <% if team_member.facebook.present? %>
        <a href=""><i class="bi bi-facebook"></i></a>
      <% end %>
      <% if team_member.linkedin.present? %>
        <a href=""><i class="bi bi-linkedin"></i></a>
      <% end %>
    </div>
  </div>
</div>
